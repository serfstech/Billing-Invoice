{
  "name": "distributor-invoice-system",
  "version": "1.0.0",
  "description": "Offline Desktop Distributor Invoice & Inventory Management System",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "dev": "electron . --dev"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "electron": "^40.0.0",
    "electron-updater": "^6.7.3",
    "express": "^4.18.2",
    "mysql2": "^3.6.0",
    "pdfmake": "^0.2.7"
  },
  "devDependencies": {
    "electron-builder": "^26.5.0",
    "nodemon": "^3.0.0"
  },
  "build": {
    "appId": "com.distributor.invoicesystem",
    "productName": "Distributor Invoice System",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!database/data/",
      "!*.md"
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
